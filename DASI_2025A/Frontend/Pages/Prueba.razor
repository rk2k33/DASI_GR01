@page "/prueba"
<PageTitle>Prueba</PageTitle>
<h1 class="text-3xl font-bold mb-4">Prueba</h1>
<p class="text-gray-700">Bienvenido a la página de prueba</p>

<div class="w-full flex flex-col justify-center items-center">
  <section class="backdrop-blur-lg bg-white/10 border border-white/30 rounded-2xl shadow-xl p-8 w-full max-w-md">
    <h1 class="text-2xl font-bold text-black mb-6 text-center">Inicio de sesión</h1>
    <form class="flex flex-col space-y-8">
      <FloatingLabelInput Label="Correo electrónico" Name="email" Type="email" Value=@Username LabelColor="blue"
        OnChange="HandleUsernameChange"></FloatingLabelInput>
      <FloatingLabelInput Label="Contraseña" Name="password" Type="password" Value=@Password LabelColor="blue"
        OnChange="HandlePasswordChange"></FloatingLabelInput>
      <button type="submit"
        class="bg-blue-500 hover:bg-white/30 hover:border-blue-500/40 hover:text-black text-white font-semibold py-3 rounded-lg border border-white/30 transition cursor-pointer">
        Iniciar sesión
      </button>
    </form>
  </section>
</div>

@code
{
  private string Username = "";
  private string Password = "";

  private void HandleUsernameChange(ChangeEventArgs e)
  {
    Username = e.Value?.ToString() ?? "";
  }
  private void HandlePasswordChange(ChangeEventArgs e)
  {
    Password = e.Value?.ToString() ?? "";
  }
}
