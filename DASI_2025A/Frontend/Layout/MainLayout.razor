@inherits LayoutComponentBase
@code {
    private string UserName { get; set; } = "Aldair"; // Cambiar esto dinámicamente según el usuario
}

<div class="flex flex-col lg:flex-row relative min-h-screen">
    <div class="bg-gradient-to-b from-blue-900 to-green-500 lg:w-64 lg:sticky lg:top-0 lg:h-screen">
        <NavMenu />
    </div>

    <main class="flex-1  bg-white">
        <div
            class="sticky top-0 z-10 px-4 lg:px-8 h-14 flex items-center justify-between bg-[#F3F4F6] border-b border-gray-300">
             <span class="text-gray-700 font-normal">Bienvenido, @UserName</span>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="hover:underline ml-6">About</a>
        </div>

        <article class="px-4 lg:px-8 py-4">
            @Body
        </article>
    </main>
</div>